#!/bin/bash

set -e -o pipefail

docs="
Available commands: 

  init [host]
  push [host]
  up
  status
"

function push_to_host {
    echo "Pushing to $1"
    git push "host/$1" master
    ssh -- "$1" "git checkout local && git rebase master"
}


cd -- "$HOME"

case "$1" in
    init)
	echo "Initializing $2"
	git remote add "host/$2" "ssh://$2/~/"
	ssh -- "$2" "git init-db"
	git push "host/$2" master
	ssh -- "$2" "git branch local && git checkout local"

	;;

    push)
	if [ -n "$2" ]; then
	    push_to_host "$2"
	else
	    for host in `git remote | sed 's/^host\///'`; do
		push_to_host "$host" || true
		echo
	    done
	fi

	;;

    up)
	git checkout local
	git rebase master

	;;

    status|st)
	git status -uno

	;;

    *)
	echo "$docs"
	
	;;
esac

